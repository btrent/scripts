#!/usr/bin/python

from BeautifulSoup import BeautifulSoup
import json
import os
import re
import telnetlib
import urllib2

def chessvideos():
	title('ChessVideos.tv')

	url = urllib2.urlopen("http://www.chessvideos.tv/chess-video-search.php?q=video_type%3A%22Master+Hangout%22+curtains&s=topic_id&p=&dmin=&dmax=")
	content = url.read()
	soup = BeautifulSoup(content)
	links = soup.findAll("a", attrs={'class':'vlist'})
	cols = []

	regex = re.compile(r"\n\s+", re.IGNORECASE)
	for link in links:
		cols.append([regex.sub("", link.contents[0]), link['href']])

	pretty_print(cols)

def youtube():
	title('YouTube')

	channels = ['chessnetwork', 'chessexplained']

	for channel in channels:
		print channel + ':'
		url = 'http://gdata.youtube.com/feeds/api/users/' + channel + '/uploads?max-results=5&alt=json'
		response = urllib2.urlopen(url)
		data = json.load(response)
		entries = data.get('feed').get('entry')
		entrydata = []

		for entry in entries:
			t = entry['published']['$t']
			t = t.replace('T', ' at ').replace('.000Z', '')
			entrydata.append([t,entry['title']['$t'],entry['media$group']['media$player'][0]['url'].replace('&feature=youtube_gdata_player', '')])

		pretty_print(entrydata)

def twitch():
	title('Twitch')

	games = ['Super Mario World', 'Super Mario Bros. 3', 'Super Mario Bros.', 'Chess', 'Donkey Kong']
	channels = 'jeffw356,up2ng,hankchien,dram55,kakusho,k1rua,go1den,suidt,dethwing,roopert83,dangheesling,whenchukattacks,whenchukraces,chessnetwork,ptudose,andrewg1990'

	for game in games:
		print game + ':'
		url = 'http://api.twitch.tv/kraken/streams?limit=24&offset=0&game=' + game.replace(' ', '+') + '&on_site=1'
		response = urllib2.urlopen(url)
		data = json.load(response)
		streams = data.get('streams', None)
		streamdata = []

		for stream in streams:
			if (stream['channel']['status'] is None):
				stream['channel']['status'] = ''
			streamdata.append([stream['channel']['display_name'], stream['channel']['status'], stream['channel']['url']])

		pretty_print(streamdata)		

	url = 'https://api.twitch.tv/kraken/streams?channel=' + channels
	response = urllib2.urlopen(url)
	data = json.load(response)
	streams = data.get('streams', None)
	streamdata = []

	print '\nFollowed Channels\n'

	for stream in streams:
		if (stream['channel']['status'] is None):
			stream['channel']['status'] = ''
		streamdata.append([stream['channel']['display_name'], stream['channel']['status'], stream['channel']['url']])

	pretty_print(streamdata)

